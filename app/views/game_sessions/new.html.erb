<h1>GameSessions#new</h1>
<p>Find me in app/views/game_sessions/new.html.erb</p>


<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <%= simple_form_for [@gamesession] do |f| %>
      <%= f.input :name %>
      <%= f.input :game_id, as: :radio_buttons, collection: [['1', 'Commander'], ['2', 'Brawl']], label_method: :second, value_method: :first  %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
      <%= f.input :min_players%>
      <%= f.input :max_players %>
      <%= f.input :description %>
      <%= f.submit "Create a Game session", class: "btn btn-dark" %>
      <%= link_to "Cancel", game_sessions_path, class: "btn btn-dark" %>
      <% end %>
    </div>
  </div>
</div>
